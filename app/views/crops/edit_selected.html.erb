<div id="editCrop">
	<h2 class="sideHeading">Update Crop Details</h2>
	<%= form_for(@crop, :url => update_selected_crops_path, :html => { :method => :put }) do |fields| %>
		<%= hidden_field_tag :crop_id, @crop.id %>
		<%= render "editCropFields", f:fields %>
		<div class="button_align">
				<ul>
					<li><%= fields.submit "Submit", class: 'submit_button' %></li>
					<li><%= link_to "Cancel", crops_path(search: selected_farm.id), class: 'submit_button' %></li>
				</ul>
			</div>
	<% end%>
</div>


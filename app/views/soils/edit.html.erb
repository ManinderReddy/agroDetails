<div id="editSoil">
	<h2>Update Soil Details</h2>
	<%= form_for @soil do |fields| %>
	  	<%= render "newSoilFields", f:fields %>
	  	<div class="button_align">
			<ul>
				<li><%= fields.submit "Submit", class: 'submit_button' %></li>
				<li><%= link_to "Cancel", soils_path, class: 'submit_button' %></li>
			</ul>
		</div>
	<% end %>



</div>
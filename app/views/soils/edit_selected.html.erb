<div id="editSoil">
<h2 class="sideHeading">Update Soil Details</h2>
<%= form_for(@soil, :url => update_selected_soils_path, :html => { :method => :put }) do |fields| %>
<%= hidden_field_tag :soil_id, @soil.id %>
<%= render "editSoilFields", f:fields %>
<div class="button_align">
		<ul>
			<li><%= fields.submit "Submit", class: 'submit_button' %></li>
			<li><%= link_to "Cancel", soils_path(search: selected_farm.id), class: 'submit_button' %></li>
		</ul>
	</div>
<% end%>
</div>


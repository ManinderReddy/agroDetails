<div id="crop_report">
	<h2 class="sideHeading">Crop Report</h2>
	<%= form_tag crop_reports_path, method:'get' do %>
	<div class="searchField">
			<label>From</label>
			<%= date_field_tag :from_date, @from_date %>&nbsp&nbsp
			<label>To</label>
			<%= date_field_tag :to_date, @to_date %><br/><br/>
			<%= submit_tag "Submit",class: 'submit_button' %>&nbsp&nbsp
			<%= link_to "Back", reports_path, class: 'submit_button' %>
		</div>
		<% if get_download_path("crop").present? %>
			<%= submit_tag "Download Report" %> &nbsp&nbsp
			<%= hidden_field_tag :report_type, "crop" %>
			<%= submit_tag "Email Report"%>
		<% end %>
	<% end %>
</div>

<div id="reports">
	<h2 class="sideHeading">Reports</h2>
	<%= form_tag reports_path, method:'get' do %>
	<div class="searchField">
			<%= select_tag :search, options_for_select(["Farms", "Soils", "Crops", "Fertilizers"],selected: params[:search]), prompt: 'Please select' %>
			<%= submit_tag "Search", name: nil ,class: 'submit_button' %>
		</div>
	<% end %>
</div>
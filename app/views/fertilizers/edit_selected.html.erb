<div id="editFertilizer">
	<h2 class="sideHeading">Update Fertilizer Details</h2>
	<%= form_for(@fertilizer, :url => update_selected_fertilizers_path, :html => { :method => :put }) do |fields| %>
		<%= hidden_field_tag :fertilizer_id, @fertilizer.id %>
		<%= render "editFertilizerFields", f:fields %>
		<div class="button_align">
				<ul>
					<li><%= fields.submit "Submit", class: 'submit_button' %></li>
					<li><%= link_to "Cancel", view_fertilizers_path(crop_id: selected_crop.id), class: 'submit_button' %></li>
				</ul>
			</div>
	<% end%>
</div>
<div id="showProfile">
	<h2 class="sideHeading">Profile Information</h2>
	<table class="tableDetails">
		<tr class="showProfileValues">
			<td class="field">First Name:</td>
			<td><%= @user.first_name %></td>
		</tr>
		<tr class="showProfileValues">
			<td class="field">Last Name:</td>
			<td><%= @user.last_name %></td>
		</tr>
		<tr class="showProfileValues">
			<td class="field">Email:</td>
			<td><%= @user.email %></td>
		</tr>
		<tr class="showProfileValues">
			<td class="field">Phone No:</td>
			<td><%= @user.phone_no %></td>
		</tr>
		<tr class="showProfileValues">
			<td class="field">Address:</td>
			<td><%= @user.address %></td>
		</tr>
		<tr class="showProfileValues">
			<td class="field">City:</td>
			<td><%= @user.city %></td>
		</tr>
		<tr class="showProfileValues">
			<td class="field">State:</td>
			<td><%= @user.state %></td>
		</tr>
		<tr class="showProfileValues">
			<td class="field">Country:</td>
			<td><%= @user.country %></td>
		</tr>
	</table>
	<% if current_user?(@user)  %>
	<%= link_to "Update Profile", edit_user_path(current_user), :class => "submit_button" %>
	<% end %>
</div>